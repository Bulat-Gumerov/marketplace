FROM golang:1.12-alpine3.10

ENV APP=marketplace
RUN apk update
RUN apk upgrade
RUN apk add --no-cache bash zsh ca-certificates git libc-dev make build-base

ENV PATH /go/bin:$PATH
ENV GOPATH /go
ENV MARKETPLACEPATH /go/src/github.com/dgamingfoundation/marketplace
RUN mkdir -p $MARKETPLACEPATH

COPY . $MARKETPLACEPATH

WORKDIR $MARKETPLACEPATH

ENV GO111MODULE=on

#RUN $MARKETPLACEPATH/run.sh --embeded
#RUN mkdir -p ~/.mpd/config
#COPY config.toml ~/.mpd/config
RUN make install

EXPOSE 26657
EXPOSE 1317

ENTRYPOINT $MARKETPLACEPATH/mpdstart.sh